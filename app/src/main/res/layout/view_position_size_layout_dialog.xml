<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/position_size_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/view_position_size_back_btn"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?android:selectableItemBackground"
            android:padding="18dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/stock_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="monospace"
            android:text="Stock Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/position_size_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <RelativeLayout
                    android:id="@+id/position_size_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_white_bg">

                    <TextView
                        android:id="@+id/position_size_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="monospace"
                        android:padding="2dp"
                        android:text="Position Size"
                        android:textColor="@color/gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_size_heading"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:padding="2dp"
                            android:text="Number of shares"
                            android:textColor="@color/green"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/quantity_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:padding="2dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/risk_to_reward_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:padding="2dp"
                            android:text="Risk to Reward "
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/position_size_inputs_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/position_size_layout"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/position_size_inputs_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="2dp"
                        android:text="Inputs"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_size_inputs_heading"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_white_bg"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/position_size_inputs_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/image_round_gray_bg"
                            android:padding="7dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/position_size_inputs_img"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Entry Price"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/entry_price_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Stoploss"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/stoploss_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Exit Price"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/exit_price_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/position_size_profit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/position_size_inputs_layout"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/position_size_profit_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profit"
                        android:fontFamily="monospace"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="2dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_size_profit_heading"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_white_bg"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/position_size_profit_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/image_round_gray_bg"
                            android:padding="7dp"
                            android:src="@drawable/profit_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/position_size_profit_img"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Total Profit"
                                    android:textColor="@color/green"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/profit_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0(0.0%)"
                                    android:textColor="@color/green"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Profit per share"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/profit_per_share_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0(0.0%)"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/position_size_loss_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/position_size_profit_layout"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/position_size_loss_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loss"
                        android:fontFamily="monospace"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="2dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_size_loss_heading"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_white_bg"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <ImageView
                            android:id="@+id/position_size_loss_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/loss_icon"
                            android:padding="7dp"
                            android:background="@drawable/image_round_gray_bg"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/position_size_loss_img"
                            android:layout_marginLeft="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Total Loss"
                                    android:textColor="@color/red"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/loss_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0(0.0%)"
                                    android:textColor="@color/red"
                                    android:textSize="15sp" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loss per share"
                                    android:fontFamily="monospace"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray"
                                    android:padding="2dp"/>

                                <TextView
                                    android:id="@+id/loss_per_share_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="0.0(0.0%)"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/position_size_margin_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/position_size_loss_layout"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/position_size_margin_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Margin"
                        android:fontFamily="monospace"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="2dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_size_margin_heading"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_white_bg"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/position_size_margin_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/image_round_gray_bg"
                            android:padding="7dp"
                            android:src="@drawable/margin_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/position_size_margin_img"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Margin Required"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/margin_required_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="\u20B9 0"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Actual Capital Required"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/actual_capital_required_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="\u20B9 0"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/position_size_charges_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/position_size_margin_layout"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/position_size_charges_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charges"
                        android:fontFamily="monospace"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="2dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_size_charges_heading"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corner_white_bg"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/position_size_charges_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/image_round_gray_bg"
                            android:padding="5dp"
                            android:src="@drawable/charges_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/position_size_charges_img"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Profit Charge"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/profit_charges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="\u20B9 0"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="Loss Charge"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/loss_charges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="monospace"
                                    android:padding="2dp"
                                    android:text="\u20B9 0"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>